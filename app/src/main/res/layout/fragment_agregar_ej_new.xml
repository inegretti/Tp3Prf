<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AgregarEjNewFragment" >

    <View
        android:id="@+id/viewHeaderBackground"
        android:layout_width="414dp"
        android:layout_height="116dp"
        android:background="#E9106DB6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/IngNuevoEj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:shadowColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Ingreso de nuevo ejercicio"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ingNewEjNom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewHeaderBackground" />

    <Button
        android:id="@+id/btnIngNewEj"
        android:layout_width="184dp"
        android:layout_height="68dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#E9106DB6"
        android:text="Agregar ejercicio"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxComentario" />

    <EditText
        android:id="@+id/boxComentario"
        android:layout_width="280dp"
        android:layout_height="167dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Comentario"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/btnIngNewEj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingNewEjMul"
        app:layout_constraintVertical_bias="0.936" />

    <EditText
        android:id="@+id/ingNewEjNom"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Ingrese nombre del ejercicio"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ingNewEjMul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngNuevoEj" />

    <EditText
        android:id="@+id/ingNewEjMul"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Ingrese link de multimedia"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/boxComentario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingNewEjNom" />

</androidx.constraintlayout.widget.ConstraintLayout>